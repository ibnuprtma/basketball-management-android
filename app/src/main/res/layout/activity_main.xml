<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:elevation="5dp"
            android:background="@drawable/rounded_card"
            android:padding="12dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtNameTeam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Eagle Team"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/txtTotalPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="59 Players"
                android:textColor="@color/colorPrimaryText"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_images"
                    android:src="@drawable/ic_place_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jl. Kedung Klinter 7/20" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/rounded_card"
                android:elevation="5dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_players"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/undraw_basketball_agx4" />

                <Button
                    android:id="@+id/btnPlayers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Players"
                    android:background="@color/colorBtn"
                    android:textColor="@android:color/white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/rounded_card"
                android:elevation="5dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/img_content"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:src="@drawable/undraw_greek_freak_j2qb" />

                <Button
                    android:id="@+id/btnContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Content"
                    android:background="@color/colorBtn"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:src="@drawable/undraw_greek_freak_j2qb" />

    </LinearLayout>
</ScrollView>